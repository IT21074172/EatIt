<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">


    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="25dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profic"
        android:gravity="center"
        android:layout_marginTop="100dp"
        >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/settings"
        android:src="@drawable/ic_baseline_account_circle_24"

        />


    </LinearLayout>

    <TextView
        android:id="@+id/usernamev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profic"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/username"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernamev"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/purple_700"
        android:textSize="15dp"
        android:textStyle="bold" />


    <View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/edit"
        android:layout_marginTop="25dp"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/savedplc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="Saved places"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/homeic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/savedplc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:drawableLeft="@drawable/ic_baseline_home_25"
        android:drawablePadding="10dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="Home"
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/addrsh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeic"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="No: 180/A, School lane, Giridara, Kapugoda   10662"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/workic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addrsh"
        android:text="Work"
        android:fontFamily="sans-serif"
        android:textSize="22dp"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_work_24"
        android:drawablePadding="10dp"
        />

    <TextView
        android:id="@+id/addrsw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workic"
        android:text="Add work"
        android:fontFamily="sans-serif"
        android:textSize="12dp"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />



    <Button
        android:id="@+id/button2"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Add New Place"
        android:layout_below="@+id/addrsw"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:text="Sign Out"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:gravity="left"
        android:textColor="@color/purple_700"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />


</RelativeLayout>